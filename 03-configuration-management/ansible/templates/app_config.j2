application:
  name: {{ app_name }}
  environment: {{ environment }}
  port: {{ app_port }}
  
server:
  host: 0.0.0.0
  workers: {% if environment == 'production' %}4{% else %}2{% endif %}
  
logging:
  level: {% if environment == 'production' %}WARNING{% else %}DEBUG{% endif %}
  file: {{ app_directory }}/logs/app.log
  
features:
  debug_mode: {% if environment == 'development' %}true{% else %}false{% endif %}
  metrics_enabled: true
  
